
<% if params[:client_id] %>
<h2> Your projects for <%=@client.business_name%>: </h2>
	<ol>
	<% @projects.each do |p| %>
	<li>
		<%= link_to p.description, project_path(p) %> for <%= p.client.business_name%>
	</li>
	<%end%>
</ol>


<%elsif @projects.count !=0 %>
<h2> All of your projects: </h2>
	<ol>
	<% @projects.each do |p| %>
	<li>
		<%= link_to p.description, project_path(p) %> for <%= p.client.business_name%>
	</li>
	<%end%>
</ol>
<%else%>

<h2> You currently have no projects. </h2>
<%end%>
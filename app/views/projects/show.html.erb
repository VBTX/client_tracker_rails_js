
<div class="container">
	<div class="col-md-12">
	<br>
		<h4 align="center">Project name: <%=@project.description%> <br/> Client: <%=@project.client.business_name %></h4><br />
</div>
<br/>
	<%if @project.invoices %>
		<h3>Issued invoices</h3>
		
		<table class="table table-hover">
			<thead  class="table-active">		
				<tr>
					<th>No.</th>
					<th>Date</th>
					<th>Service</th>
					<th>Rate</th>
					<th>Quantity</th>
					<th>Total</th>
					<th></th>
					</tr>		
			<tbody class="table-default" >
				<% @project.invoices.each_with_index do |i, index| %>
					<td><%= index + 1 %></td>
					<td><%= created_date i %></td>
					<td><%= i.service %></td>
					<td><%= i.rate %></td>
					<td><%= i.amount %></td>
					<td>$<%= i.total %></td>
					<td><%=link_to "Open", invoice_path(i), :class => "btn btn-primary btn-md"%> &nbsp<%= link_to "Edit", edit_invoice_path(i), :class => "btn btn-success btn-md" %>&nbsp<%= link_to "Delete", i, method: :delete,  data: { confirm: "Are you sure you want to delete this invoice?" }, :class => "btn btn-danger btn-md"%></td>
				</tbody>
				<% end %>
			</thead>
		</table>
	<% else %>
		<h4> This project has no invoices </h4>
	<% end %>

	<form action="<%=edit_project_path(@project)%>" method="get" style="display:inline-block">
	<button type="submit" class="btn btn-primary btn-md" value="edit_projects">Edit Project Info</button></form>
	<form action="<%=new_project_invoice_path(@project)%>" method="get" style="display:inline-block">
	<button type="submit" class="btn btn-primary btn-md" value="create_invoice">New Invoice for This Project</button>
	</form>
	<div style="display:inline-block"><%= link_to "Delete Project", @project, method: :delete, data: { confirm: "Are you sure you want to delete this project?" }, :class => "btn btn-danger btn-md"%></div>
	</div>
</div>





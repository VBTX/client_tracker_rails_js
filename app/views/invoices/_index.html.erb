
<table class="table table-bordered table-hover">
	<thead  class="table-active">
		<tr>
			<th>Client</th>
			<th>Service</th>
			<th>Total</th>
			<th>Created</th>
			<th>Modified</th>
			<th></th>
		</tr>
	</thead>
	<tbody class="table-default">
		<% @invoices.each do |i| %>
		<tr>
			<td><%= who_client(i) %></td>
			<th><%= i.service %></th>
			<td>$<%= i.total %></td>
			<td><%= created_date i%></td>
			<td><%= last_modified i %></td>
			<td class="text-center"><%= link_to "Open", invoice_path(i), :class => "btn btn-primary btn-md" %>&nbsp<%= link_to "Edit", edit_invoice_path(i), :class => "btn btn-success btn-md" %>&nbsp<%= link_to "Delete", i, method: :delete,  data: { confirm: "Are you sure you want to delete this invoice?" }, :class => "btn btn-danger btn-md"%></td>
		</tr>
		<%end%>
	</tbody>
</table>


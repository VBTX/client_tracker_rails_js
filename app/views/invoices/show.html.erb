
<%if @invoice.project %>
<table class="table table-bordered table-hover">
	<thead  class="table-active">
		<tr>
			<th>Invoice Details</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<th>Project</th>
			<td><%=@invoice.project.description%></td>
		</tr>
		<tr>
			<th>Service</th>
			<td><%= @invoice.service %></td>
		</tr>
		<tr>
			<th>Rate</th>
			<td><%= @invoice.rate %></td>
		</tr>
		<tr>
			<th>Amount</th>
			<td><%= @invoice.amount %></td>
		</tr>
		<tr>
			<th>Total</th>
			<td><%= @invoice.total %></td>
		</tr>
	</tbody>
</table>

<%= link_to "Edit", edit_invoice_path(@invoice), :class => "btn btn-success btn-md"%>
<%= link_to "Delete", @invoice, method: :delete, data: { confirm: "Are you sure you want to delete this invoice?"}, :class => "btn btn-danger btn-md"%>
<%= link_to "Back to Project", project_path(@invoice.project), :class => "btn btn-primary btn-md" %>

<%else%>
<div class="alert alert-danger" role="alert"><h3 style="color:red"> This invoice is not associated with any project. In order to add it to a project, please create a client and/or project first.</h3></div>

<table class="table table-bordered table-hover">
	<thead  class="table-active">
		<tr>
			<th>Invoice Details</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<th>Service</th>
			<td><%= @invoice.service %></td>
		</tr>
		<tr>
			<th>Rate</th>
			<td><%= @invoice.rate %></td>
		</tr>
		<tr>
			<th>Amount</th>
			<td><%= @invoice.amount %></td>
		</tr>
		<tr>
			<th>Total</th>
			<td><%= @invoice.total %></td>
		</tr>
	</tbody>
</table>

	
<%= link_to "Clients", clients_path, :class => "btn btn-primary btn-md" %>
<%= link_to "Edit", edit_invoice_path(@invoice), :class => "btn btn-success btn-md" %>
<%= link_to "Delete", @invoice, method: :delete,  data: { confirm: "Are you sure you want to delete this invoice?" }, :class => "btn btn-danger btn-md"%>
<%= link_to "Back", invoices_path, :class => "btn btn-primary btn-md" %>
<%end%>

